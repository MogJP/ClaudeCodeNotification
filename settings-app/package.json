{
  "name": "claude-notifier-settings",
  "version": "1.0.0",
  "description": "Claude Code 通知設定ツール",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "keywords": ["claude", "notification", "settings"],
  "author": "Claude Code Notifier Project",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.claude.notifier.settings",
    "productName": "Claude通知設定",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "dir",
      "icon": "assets/icon.ico",
      "publisherName": "Claude Code Notifier",
      "verifyUpdateCodeSignature": false
    },
    "files": [
      "**/*",
      "!src",
      "!dist"
    ]
  }
}